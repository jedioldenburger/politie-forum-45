rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // News collection - public read, admin write (legacy)
    match /news/{article} {
      allow read;  // Public articles
      allow write: if false;  // Only server (Admin SDK) can write
    }

    // AI-enhanced news collection - public read, admin write (PRIMARY)
    match /ai_news/{article} {
      allow read;  // Public articles with AI enhancements
      allow write: if false;  // Only server (Admin SDK) can write
    }

    // Comments collection - authenticated write, public read
    match /comments/{comment} {
      allow read;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Users collection
    match /users/{userId} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Categories collection - public read, admin write
    match /categories/{category} {
      allow read;
      allow write: if false;
    }
  }
}
